VAR   x,y:INTEGER;

PROCEDURE MainTank(w:Window;x1,y1:INTEGER;colr:SHORTCARD);
BEGIN
     FOR y:=0 TO 15 DO
         FOR x:= 1 TO 40 DO

            IF  tanks[INTEGER(REAL(y)*40.0+REAL(x))] = 1 THEN
         PutPixel2C(w,x1+x,y1-y,VAL(ColourType,colr));
         END (*IF*);
         END (*FOR*);
     END (*FOR*);
END MainTank;
