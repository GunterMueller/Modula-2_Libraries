MODULE tSimpleFIO;
IMPORT SimpleIO, TextIO, SimpleFIO, IOErrors, SysTypes;
PROCEDURE FixIt( file : TextIO.Object );
    BEGIN (* FixIt *)

	TextIO.PrintErrorMessage( file, '' );
	IF TextIO.SetError( file, IOErrors.ok ) # TextIO.ok THEN
	    TextIO.PrintErrorMessage( file, '' );
	    HALT;
	END;

    END FixIt;
VAR
    input : TextIO.Object;
    output : TextIO.Object;
    formatString : ARRAY [ 0 .. 100 ] OF CHAR;
    card : SysTypes.CARDINAL32;
BEGIN
    input := TextIO.GetInput();
    output := TextIO.GetOutput();
    LOOP
	SimpleIO.WriteString( "Calling Prompt with Number parameter." );
	SimpleIO.WriteLn;
	SimpleIO.WriteString( "format: " );
	SimpleIO.ReadString( formatString );
	IF SimpleIO.EOF() THEN
	    EXIT;
	END;
	SimpleIO.ReadLn;
	SimpleFIO.PromptedRead1( formatString, card );
	IF SimpleFIO.EOF() THEN
	    EXIT;
	END;

	SimpleIO.ReadLn;	(* Flush rest of line *)

	SimpleIO.WriteString( "Calling Write with Number just entered." );
	SimpleIO.WriteLn;
	SimpleIO.WriteString( "format: " );
	SimpleIO.ReadString( formatString );
	IF SimpleIO.EOF() THEN
	    EXIT;
	END;
	SimpleIO.ReadLn;
	SimpleFIO.Write1( formatString, card );
	SimpleIO.WriteLn;


	SimpleIO.WriteString( "Calling Read with Number parameter." );
	SimpleIO.WriteLn;
	SimpleIO.WriteString( "format: " );
	SimpleIO.ReadString( formatString );
	IF SimpleIO.EOF() THEN
	    EXIT;
	END;
	SimpleIO.ReadLn;
	IF NOT SimpleFIO.Read1( formatString, card ) THEN
	    FixIt( input );
	END;
	IF SimpleFIO.EOF() THEN
	    EXIT;
	END;

	SimpleIO.ReadLn;	(* Flush rest of line *)

	SimpleIO.WriteString( "Calling Write with Number just entered." );
	SimpleIO.WriteLn;
	SimpleIO.WriteString( "format: " );
	SimpleIO.ReadString( formatString );
	IF SimpleIO.EOF() THEN
	    EXIT;
	END;
	SimpleIO.ReadLn;
	SimpleFIO.Write1( formatString, card );
	SimpleIO.WriteLn;
    END; (* LOOP *)

END tSimpleFIO.
