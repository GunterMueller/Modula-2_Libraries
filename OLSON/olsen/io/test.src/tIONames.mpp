MODULE tIONames;
IMPORT
    SimpleIO,	IONames,	IOConsts;
VAR
    path      : IOConsts.Path;
    directory : IOConsts.Path;
    base      : IOConsts.Base;
    suffix    : IOConsts.Suffix;
BEGIN (* tIONames *)

    LOOP
	SimpleIO.WriteString( "Enter a path: " );
	SimpleIO.ReadString( path );
	SimpleIO.ReadLn;
	IF path[ 0 ] = 0C THEN
	    EXIT;
	END;
	SimpleIO.WriteString( "Validate = " );
	CASE IONames.Validate( path ) OF
	    IONames.pathIsRelative:
		SimpleIO.WriteString( "pathIsRelative" );
	    |
	    IONames.pathIsAbsolute:
		SimpleIO.WriteString( "pathIsAbsolute" );
	    |
	    IONames.pathIsIllegal:
		SimpleIO.WriteString( "pathIsIllegal" );
	END; (* CASE *)
	SimpleIO.WriteLn;

	SimpleIO.WriteString( 'Separate = ( "' );
	IONames.Separate( path, directory, base, suffix );
	SimpleIO.WriteString( directory );
	SimpleIO.WriteString( '", "' );
	SimpleIO.WriteString( base );
	SimpleIO.WriteString( '", "' );
	SimpleIO.WriteString( suffix );
	SimpleIO.WriteString( '" )' );
	SimpleIO.WriteLn;

	SimpleIO.WriteString( 'Make = "' );
	IONames.Make( directory, base, suffix, directory );
	SimpleIO.WriteString( directory );
	SimpleIO.WriteString( '"' );
	SimpleIO.WriteLn;

	SimpleIO.WriteString( 'MakeAbsolute = "' );
	IONames.MakeAbsolute( path, directory );
	SimpleIO.WriteString( directory );
	SimpleIO.WriteString( '"' );
	SimpleIO.WriteLn;
	SimpleIO.WriteLn;
    END;

END tIONames.
